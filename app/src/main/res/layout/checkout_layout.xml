<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:padding="20dp"

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="20dp"
                    android:text="Your shopping cart"/>


                <TextView
                    android:background="@drawable/cell_shape"

                    android:id="@+id/text_product"
                    android:layout_width="match_parent"
                    android:inputType="textMultiLine"
                    android:layout_height="wrap_content"

                    android:padding="5dp"
                    android:textColor="@color/white"

                    android:textAppearance="?android:attr/textAppearanceMedium"></TextView>







                <TextView
                    android:inputType="textMultiLine"
                    android:background="@drawable/cell_shape"

                    android:id="@+id/text_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="5dp"
                    android:textColor="@color/white"

                    android:textAppearance="?android:attr/textAppearanceMedium"></TextView>








                <TextView

                    android:background="@drawable/cell_shape"
                    android:id="@+id/text_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:inputType="textMultiLine"


                    android:textAppearance="?android:attr/textAppearanceMedium"></TextView>







                <TextView
                    android:inputType="textMultiLine"
                    android:background="@drawable/cell_shape"

                    android:id="@+id/text_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium"></TextView>





            </LinearLayout>

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="@dimen/chekoutmargin"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeOfCheckout"
                android:text="Full Name "/>



            <EditText
                android:textCursorDrawable="@null"
                android:padding="10dp"
                android:id="@+id/check_fullname"
                android:layout_width="match_parent"
                android:inputType="text"
                android:background="@drawable/feedback_shape"
                android:layout_height="@dimen/checkoutedttextheight" />


            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/chekoutmargin"
                android:textSize="@dimen/textSizeOfCheckout"
                android:text="Email address "/>
            <EditText
                android:textCursorDrawable="@null"
                android:padding="10dp"
                android:id="@+id/check_email"
                android:inputType="textEmailAddress"
                android:background="@drawable/feedback_shape"
                android:layout_width="match_parent"
                android:layout_height="@dimen/checkoutedttextheight" />

            <TextView
                android:layout_marginTop="@dimen/chekoutmargin"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeOfCheckout"
                android:text="Country "/>

            <Spinner
                android:id="@+id/checkout_spinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/checkoutedttextheight"
                android:background="@drawable/feedback_shape"
                android:padding="10dp"></Spinner>


            <TextView
                android:textStyle="bold"
                android:layout_marginTop="@dimen/chekoutmargin"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeOfCheckout"
                android:text="Postal code "/>
            <EditText
                android:textCursorDrawable="@null"
                android:id="@+id/check_postalcode"
                android:layout_width="match_parent"
                android:inputType="text"
                android:padding="10dp"
                android:background="@drawable/feedback_shape"
                android:layout_height="@dimen/checkoutedttextheight" />

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="@dimen/chekoutmargin"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeOfCheckout"
                android:text="Address "/>
            <EditText
                android:textCursorDrawable="@null"
                android:id="@+id/check_address"
                android:layout_width="match_parent"
                android:inputType="text"
                android:padding="10dp"
                android:background="@drawable/feedback_shape"
                android:layout_height="@dimen/checkoutedttextheight" />








            <TextView
                android:layout_marginTop="@dimen/chekoutmargin"

                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeOfCheckout"
                android:text="City "/>
            <EditText
                android:textCursorDrawable="@null"
                android:padding="10dp"
                android:id="@+id/check_city"
                android:inputType="text"
                android:layout_width="match_parent"
                android:background="@drawable/feedback_shape"
                android:layout_height="@dimen/checkoutedttextheight"/>


            <Button
                android:id="@+id/check_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Confirm"
                android:textColor="@color/white"
                android:theme="@style/MyButton" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>